<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentLayout"
    style="@style/layoutBg"
    android:gravity="center"
    android:orientation="horizontal">

    <com.chat.base.ui.components.AvatarView
        android:id="@+id/avatarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.chat.base.ui.components.RoundTextView
                android:id="@+id/roleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:paddingStart="10dp"
                android:paddingTop="1dp"
                android:paddingEnd="10dp"
                android:paddingBottom="1dp"
                android:text="@string/add_group_members"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:tvBackgroundColor="@color/colorAccent"
                app:tvBottomLeftRadius="15dp"
                app:tvBottomRightRadius="15dp"
                app:tvTopLeftRadius="15dp"
                app:tvTopRightRadius="15dp" />

            <TextView
                android:id="@+id/nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/colorDark"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/color999"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

</LinearLayout>