<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homeColor"
    android:orientation="vertical">

    <include layout="@layout/wk_title_bar_layout" />

    <LinearLayout
        android:id="@+id/topLayout"
        style="@style/layoutBgPaddingSmall"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/systemTv"
                style="@style/leftTextView"
                android:text="@string/dark_follow_system" />

            <com.chat.base.ui.components.SwitchView
                android:id="@+id/followSystemSwitch"
                android:layout_width="45dp"
                android:layout_height="30dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/color999"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/dark_follow_system_desc"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/color999"
            android:layout_marginBottom="5dp"
            android:text="@string/dark_choose"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/normalLayout"
            style="@style/layoutBg">

            <TextView
                android:id="@+id/normalTv"
                style="@style/leftTextView"
                android:text="@string/dark_normal" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/normalIv"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorAccent"
                android:src="@mipmap/msg_check"  />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/darkLayout"
            style="@style/layoutBg">

            <TextView
                android:id="@+id/darkTv"
                style="@style/leftTextView"
                android:text="@string/dark_night" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/nightIv"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorAccent"
                android:src="@mipmap/msg_check"  />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>